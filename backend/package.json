{
  "name": "tomcruise-backend",
  "version": "1.0.0",
  "description": "The backend GraphQL API for the Tom Cruise Running project.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:railway": "sh scripts/startup.sh && node index.js",
    "dev": "nodemon index.js",
    "db:init": "node scripts/initDb.js",
    "db:seed": "node scripts/seedDb.js",
    "db:seed-mongo": "node scripts/seedMongo.js",
    "db:setup": "npm run db:init && npm run db:seed",
    "db:migrate": "node scripts/migrate.js",
    "schema:export": "node scripts/exportSchema.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-http": "^1.22.0",
    "mongodb": "^6.3.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  }
}
